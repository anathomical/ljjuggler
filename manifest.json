{
  "name":"LJ Account Juggler",
  "version":"3.0.5",
  "description":"A solution for LiveJournal account switching in Chrome",
  "update_url":"http://rushin-doll.net/lj-juggler/updates.xml",
  "options_page":"options.html",
  "background_page":"background.html",
  "icons":
  { 
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action":
  {
    "default_icon":"images/icon19.png",
	"default_title":"LJ Juggler",
	"popup":"popup.html"
  },
  "permissions":
  [
	"tabs",
	"cookies",
    "http://*.livejournal.com/*",
	"https://*.livejournal.com/*",
	"http://*.insanejournal.com/*",
	"https://*.insanejournal.com/*",
	"http://*.journalfen.net/*",
	"https://*.journalfen.net/*",
	"http://*.deadjournal.com/*",
	"https://*.deadjournal.com/*",
	"http://*.scribbld.net/*",
	"https://*.scribbld.net/*",
	"http://*.dreamwidth.org/*",
	"https://*.dreamwidth.org/*",
	"http://*.inksome.com/*",
	"https://*.inksome.com/*"
  ]
}