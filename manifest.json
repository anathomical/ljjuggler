{

  "manifest_version": 2,
  "name":"LJ Account Juggler",
  "version":"4.0.0",
  "description":"A port of the Chrome extension, this addon lets users easily switch between accounts on LiveJournal-based websites.",
  "background":
  {
	"page": "background.html"
  },
  "icons":
  { 
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  
    "applications": {
    "gecko": {
      "id": "ljjuggler@andontie.net",
      "strict_min_version": "46.0"
    }
  },
  
  "browser_action":
  {
    "default_icon":"images/icon19.png",
	"default_title":"LJ Juggler",
	"default_popup":"popup.html"
  },
  "permissions":
  [
	"tabs",
	"cookies",
	"http://*.dreamwidth.org/*",
	"https://*.dreamwidth.org/*",
	"http://*.livejournal.com/*",
	"https://*.livejournal.com/*",
	"http://*.insanejournal.com/*",
	"https://*.insanejournal.com/*",
        "http://*.scribbld.com/*",
	"https://*.scribbld.com/*"
  ]
}
